<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Başlık -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📦 Stok Çıkış İşlemi"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- QR Tarama Bölümü -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Barkod Okuyucu"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnScanQR"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="📱 QR Kod Tara"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary"
            android:layout_marginBottom="24dp" />

        <!-- Ürün Bilgi Kartı -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seçili Ürün"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/productInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:minHeight="120dp"
            android:gravity="center_vertical">

            <!-- Ürün Resmi -->
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:background="@color/dark_gray"
                android:layout_marginEnd="16dp"
                android:visibility="gone" />

            <!-- Ürün Detayları -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Barkod okutarak ürün seçin"
                    android:textColor="@color/light_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/productCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/light_gray"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/productBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/primary_blue"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Stok Bilgisi -->
            <TextView
                android:id="@+id/stockBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_success"
                android:padding="8dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Stok Bilgi Uyarısı -->
        <LinearLayout
            android:id="@+id/stockInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/primary_blue"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ℹ️"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/stockText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Form Bölümü -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Çıkış Bilgileri"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etProductCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Barkod Numarası"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"
            android:background="@drawable/edit_text_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:enabled="false" />

        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Miktar"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"
            android:background="@drawable/edit_text_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:inputType="number"
            android:minHeight="60dp" />

        <EditText
            android:id="@+id/etCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Müşteri (Opsiyonel)"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"
            android:background="@drawable/edit_text_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:minHeight="60dp" />

        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Açıklama (Opsiyonel - Müşteri yoksa zorunlu)"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"
            android:background="@drawable/edit_text_background"
            android:padding="16dp"
            android:layout_marginBottom="32dp"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:minHeight="120dp" />

        <!-- Butonlar -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Stok Çıkış Yap"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_success"
            android:layout_marginBottom="16dp"
            android:enabled="false" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Temizle"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_danger" />

    </LinearLayout>

</ScrollView> 